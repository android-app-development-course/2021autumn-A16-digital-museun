<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".relicDetail"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/relicImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/temp8"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        >
    </ImageView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/relicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="汝窑天蓝釉刻花鹅颈瓶"
        android:textSize="25sp">
    </TextView>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/location"
            />
        <TextView
            android:text="河南博物院"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_marginTop="35dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="藏品介绍"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        此瓶敞口细颈，鼓腹圈足，颈部及腹部剔刻折枝莲花纹。器表满施天蓝釉，釉层匀净莹润，开片疏密有致。瓶的圈足底部露胎，并沾有细小砂粒，显系垫烧而成。汝窑是宋代五大名窑之一，其产品不重装饰，向以釉色取胜。"
        android:textSize="15sp">
    </TextView>


</LinearLayout>